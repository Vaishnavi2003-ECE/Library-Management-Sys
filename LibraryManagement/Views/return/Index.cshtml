@{
    Layout = null;
}
@model List<LibraryManagement.Models.returnModel>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Return Books</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>

        body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
        }

        h2 {
        text-align: center;
        margin-top: 20px;
        }

        table {
        width: 90%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: white;
        }

        table th, table td {
        padding: 10px;
        border: 1px solid #ddd;
        text-align: left;
        }

        table th {
        background-color: #f4f4f4;
        }

        .btn {
        padding: 8px 16px;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        background-color: #008000;
        border: none;
        cursor: pointer;
        }

        .btn-danger {
        background-color: #dc3545;
        }

        .text-center {
        text-align: center;
        margin-top: 20px;
        }

        .no-results {
        text-align: center;
        margin-top: 20px;
        color: #888;
        }
    </style>
</head>
<body>

     <h2>Borrowed Books</h2>
     <br>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>Book</th>
            <th>Quantity</th>
            <th>Borrow Date</th>
            <th>Due Date</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var record in Model)
          {
          <tr>
             <td>@record.UserName</td>
             <td>@record.BookName </td>
             <td>@record.Quantity </td>
             <td>@record.BorrowDate.ToShortDateString()</td>
             <td>@record.DueDate.ToShortDateString()</td>
             <td>
                 <form asp-action="Return" asp-controller="return" method="post">
                     @Html.AntiForgeryToken()
                     <input type="hidden" name="BorrowID" value="@record.BorrowID" />
                     <button type="submit">Return</button>
                 </form>
             </td>
          </tr>
          }
        </tbody>
      </table>
</body>
</html>
